
events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    index index.html;

    server {
        listen 80;
        root /app;

        location / {
            try_files $uri $uri/ $uri.html /index.html;
        }

        location ~ [^/]\.css(/|$) {
            try_files $uri /styles.css;
        }

        location ~ [^/]\.js(/|$) {
            try_files $uri /bundle.js;
        }
    }
}
